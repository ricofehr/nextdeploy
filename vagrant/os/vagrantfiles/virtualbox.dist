      uosnt.vm.network :private_network, :ip => "%%APIPREFIX%%.71", :netmask => "255.255.255.128", nictype: "virtio"
      uosnt.vm.network :private_network, :ip => "%%PUBPREFIX%%.71", :netmask => "255.255.255.128", nictype: "virtio"
